<?xml version="1.0"?>
<csv-inputs xmlns="http://axelor.com/xml/ns/data-import"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/data-import https://axelor.com/xml/ns/data-import/data-import_6.0.xsd">
  
  <adapter name="Number" type="com.axelor.data.adapter.NumberAdapter">
    <option name="thousandSeparator" value=","/>
    <option name="decimalSeparator" value="."/>
  </adapter>
  
  <input file="client.csv" type="com.aop.company.db.Client">
  <!-- <input file="state.csv" type="com.aop.company.db.State"/> -->
   
  		<bind column="client" to="clientCompany" />		
  	 	<bind column="name" to="name"  /> 	<!-- this can be omitted as field & column have same name -->
  		<bind column="phone" to="phone" adapter="Number" /> 
  		
  		<bind to="email" search="self.email=:email" if="!email.empty">
  		<bind column="email" to="email" />
  		</bind>
  		
  		<!-- client here is the o2o mapped name / search in self (i.e client, name field, this is =: to country)
  		value of field name to be placed in column country -->
  		<bind to="client" search="self.name=:country" >
  		<bind to="name" column="country" /> 
  		</bind>
  		
  		<!-- 
  		bind the above field name to column country
  		<bind column="country" to="state" search="self.name in=:country" eval="country.split('\\|') as List"/>
  		</bind>
  		-->		
  		
  		<!-- in client o2m relation named projects, bind field name with csv file column project -->
  		<bind to="projects"> 
  		<bind to="name" column="project"/>
  		</bind>
  		<!-- 
  		<bind to="productList" search="self.name=:product">
  			<bind to="name" column="product" />
  		</bind>
  		
  		<bind to="state" search="self.name=:state">
  			<bind to="name" column="state" />
  		</bind>
  	 -->
  </input>
  
  
