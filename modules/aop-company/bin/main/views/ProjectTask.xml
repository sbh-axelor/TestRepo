<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  
   <grid name="project-task-grid" title="Project Tasks" model="com.aop.company.db.ProjectTask">
    <field name="name" />
    <field name="createDate" />
    <field name="startDate" />
    <field name="endDate" />
    <field name="user" />
    <field name="project" />
    <field name="priority" />
    <field name="state" />
    <field name="progress" /> <!-- widget="Progress" -->
  </grid>
  
  <form name="project-task-form" title="Project Task" model="com.aop.company.db.ProjectTask" onNew="project.task.on.new">
    <panel title="Overview">
      <field name="name"/>
      <field name="priority"/>
      <field name="createDate"/>
      <field name="deadlineDate"/>
      <field name="startDate"/>
      <field name="endDate"/>
      <field name="project"/>
      <field name="user"/>
      <field name="parentTask"/>
      <field name="sequence"/>
      <field name="state" />
      <field name="progress" /> <!-- widget="Progress" -->
    </panel>

	</form> 
	
	<tree name="project-task-tree" title="Project Tasks Tree">
		<column name="title" type="string"/>
		<column name="progress" type="integer" />
		
		<node model="com.aop.company.db.Project" onClick="projects.task.open.project">
			<field name="name"/>
		</node>
		
		<node model="com.aop.company.db.ProjectTask" parent="projTasks" draggable="true" >
			<field name="name" as="title"/>
			<field name="progress" as="progress"/>
		</node>
	
	</tree> 
  
  </object-views>