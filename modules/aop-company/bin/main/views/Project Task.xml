<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  
  <grid name="project-task-grid" title="Project Tasks" model="com.aop.company.db.ProjectTask">
    <field name="name" title="Project"/>
    <field name="task" title="Project Task" />
 	<field name="status" />
 	<field name="priority" />
	<field name="startDate" title="Start Date"/>
	<field name="endDate" title="End Date"/>
  </grid>
  
  <form name="project-task-form" title="Project Task" model="com.aop.company.db.ProjectTask" onNew="project.task.on.new">
    <panel title="Overview">
      <field name="name" title="Project"/>
      <field name="task" title="Project Task" x-type="many-to-one" x-target="com.aop.company.db.Project" x-target-name="projTasks" />
      <field name="status"/> 
      <field name="priority" />
      <field name="startDate"/>
      <field name="endDate"/>
  </panel>
	
	</form> 
	
