<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  
  <grid model="com.aop.company.db.Project" title="Project Detail" name="proj-grid">
	  <field name="name" />
	  <field name="priority" />
	  <field name="parent" />
	  <field name="prStDate" title="Start Date" />
	  <field name="prEndDate" title="End Date" />  
  </grid>
  
  <form model="com.aop.company.db.Project" title="Project Form" name="proj-form">
  	<panel title="Overview">
  	  <field name="name" />
	  <field name="priority" />
	  <field name="parent"/>
	  <field name="employeeSet" widget="TagSelect" canEdit="false" canNew="false" /> 
	  <field name="prStDate" />
		<field name="prEndDate" title="End Date" />	  
	</panel>
	 
	  <panel-tabs>   
		  <panel-related field ="projT" editable="true">
		  	<field name="name" />
	        <field name="startDate" />
	        <field name="endDate" />
	        <field name="employee" />
	        <field name="priority" /> 
		  </panel-related> 
		  	 
	  	  <panel name = "note" title="Project Notes" showFrame="false" showTitle="true"  >
	  		<field name="notes" title="Description" colSpan="12"/>
	  	  </panel>
	  	 
	  </panel-tabs>	  
  </form> 
</object-views>