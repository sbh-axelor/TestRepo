<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  
  <grid model="com.aop.company.db.Project" title="Project Detail" name="proj-grid">
	  <field name="projectName" />
	  <field name="projectManager" />
	  <field name="prStDate" title="Project Start Date" />
  </grid>
  
  <form model="com.aop.company.db.Project" title="Project Form" name="proj-form">
  	<panel>
  	  <field name="projectName" />
	  <field name="projectManager" />
	  <field name="prStDate" title="Start Date"/>
	 </panel>
	  
	  <panel-related field="projEmp" name="projPanel">
	  	<field name="firstName"  />
		<field name="lastName" /> 
	  </panel-related>
	  
	  
  </form>
  
  <tree name="project-task-tree" title="Project Tasks">

	  <!-- define tree columns -->
	  <column name="title" type="string" /> 
	  <column name="progress" type="integer" />
	
	  <!-- define 1st level node -->
	  <node model="com.aop.company.db.Project"> 
	    <field name="projectName" as="title" />
	  </node>
	
	  <!-- define 2nd level node -->
	  <node model="com.aop.company.db.ProjectTask" parent="project" 
	    draggable="true"> <!--  onClick="project.task.add" -->
	    <field name="projectName" as="title" />
	    <field name="progress" as="progress" />
	  </node>
			
	</tree>
  
  </object-views>