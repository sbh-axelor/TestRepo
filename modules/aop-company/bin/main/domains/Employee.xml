<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models
  http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">
  
  <module package="com.aop.company.db" name="company"/>
  
  <entity name="Employee">
  	  <string name="degree" />
	  <string name="firstName" required="true"  />
	  <string name="lastName" required="true"  />
	  <string name="empFullName" namecolumn="true">
	  	<![CDATA[return firstName + " " + lastName;]]>
	  </string>
	  
	  <string name="email" required="true" unique="true" max="100" />
  	  <string name="phone" max="20" massUpdate="true"/> 
	  <string name="designation" required="true"/>
	  <integer name="gross" />
	  <integer name="inHand"/>
	 
	  	<!--<index columns="firstName,lastName" name="idx_empFullNames"/>   -->
	  	<!-- one2many many emp one dept  - bidirectional-->
	 	<many-to-one ref="Department" name="empDept" />
	 
	  		<!-- M2M - many emp- many projects -->
	  		<many-to-many ref="Project" name="empProj" mappedBy="projEmp"/>
	  		
	  			<!--  O2M ONE EMP MANY LEAVE -->
	  			<one-to-many ref="com.aop.company.db.Leaves" name="leavesList" mappedBy="leaves"/>
  </entity>
  </domain-models>
