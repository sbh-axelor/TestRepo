<?xml version="1.0"?>
<xml-inputs xmlns="http://axelor.com/xml/ns/data-import"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/data-import https://axelor.com/xml/ns/data-import/data-import_6.0.xsd">
 
  <adapter name="Number" type="com.axelor.data.adapter.NumberAdapter">
    <option name="thousandSeparator" value=","/>
    <option name="decimalSeparator" value="."/>
  </adapter>
 
 <input root="countries" file="country.xml">
 	<bind node="country" type="com.aop.company.db.Country">
 		<bind node="code" to="code" />
 		<bind node="name" to="name"/>
 		<bind node="projects" to="projects" adapter="Number"/>
 	</bind>
 </input>

</xml-inputs>
 