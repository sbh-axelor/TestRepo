<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  
  <grid model="com.aop.company.db.Department" title="Department Detail" name="dept-grid">
  	<field name="departmentName" />
  	<field name="departmentManager" />
  </grid>
  
  <form model="com.aop.company.db.Department" title="Department Form" name="dept-form">
  	<panel name="deptPanel" title="Department Panel" >
	  	<field name="departmentName" />
	  	<field name="departmentManager" />
  	</panel>

  	<panel-related field="deptEmp" name="empPanel" title="Department Employees">
  		<field name="firstName"/>
		<field name="lastName"/>
  	</panel-related>
  
  </form>
  
  
