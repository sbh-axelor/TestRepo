<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  
 <grid model="com.aop.company.db.Leave" title="Leave Record" name="leave-grid">
 	  <field name="name" title="Employee Name"/>
	  <field name="leaveDate" required="true " />
	  <field name="month" required="true"/>
 </grid>
 
 <form model="com.aop.company.db.Leaves" title="Leave Record" name="leave-form">
 	<panel>
 	  <field name="name" title="Employee Name"/>
	  <field name="leaveDate" required="true " />
	  <field name="month" required="true"/>
	  <field name="reason" multiline="true" />
	 </panel>
	 
	 <panel-related field="leavesList" name="leavePanel" title="Leave Detail"></panel-related>

  </form>
  
  
  </object-views>