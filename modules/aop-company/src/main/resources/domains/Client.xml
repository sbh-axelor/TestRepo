<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models
  http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">
  
  <module package="com.aop.company.db" name="company"/>
  
	  <entity name="Client">
	  		<string name="name" title="Client Name"/> 
	  		<string name="clientCompany" />	
	  		<string name="email"/>
	  		<string name="phone"/>  
	  		
	  		<!-- O2O one client one country -->
	  		<one-to-one ref="com.aop.company.db.Country" name="client"  />
	  		
	  		<!-- O2M - one client many project domains -->
	  		<one-to-many ref="com.aop.company.db.ProjectDomain" name="clientDomain" mappedBy="projectDomain"/> 
	  		<!-- 
	  		M2M many clients can order 1 product, 1 client can order many products
	  		<many-to-many ref="com.aop.company.db.Product" name="productList"/>
	  		
	  		M2O many client from one state
	  		<many-to-one ref="com.aop.company.db.State" name="state" />
	  		 -->
	  		
	  </entity>
</domain-models>