<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models
  http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">
  
  <module package="com.aop.company.db" name="company"/>
  
  <entity name="Project">
	  <string name="name" />
	  <string name="manager" />
	  <string name="status" />
	  <integer name="priority" />
	  <date name="prStDate" />
	  <date name="prEndDate"/>
	  <string name="notes" multiline="true" />
	  <string name="summary" />
	    
	  <!-- M2M - many emp- may projects -->
	  <many-to-many name="projEmp" ref="Employee"  required="true"/>
	  
		  <!-- O2M - one project - many subproject -->	  
		  <one-to-many name="projT" ref="ProjectTask"  mappedBy="projTasks"/> 
		  
		  	<!-- M2O - many project one parent (this is done to show the main project also as its sub project)-->
		  	<many-to-one name="parent" ref="com.aop.company.db.Project"  />
  </entity>
</domain-models>